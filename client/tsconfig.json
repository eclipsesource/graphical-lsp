{
  "extends": "./configs/base.tsconfig",
  "compilerOptions": {
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@glsp/theia-integration": [
        "packages/theia-integration/src/*"
      ],
      "@glsp/sprotty-client": [
        "packages/sprotty-client/src/*"
      ],
      "@glsp-examples/workflow-theia": [
        "examples/workflow/workflow-theia/src/*"
      ],
      "@glsp-examples/workflow-sprotty": [
        "examples/workflow/workflow-sprotty/src/*"
      ]
    },
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "packages/*/src",
    "examples/*/src"
  ]
}
